            @Html.Password("LOGIN_PASSWORD", "", new {  @class = "form-control", @placeholder = "비밀번호", @required = true })
      
            <div id="remember" class="checkbox">
                <label>
                    @Html.CheckBox("LOGIN_chkRemberID", false, new { @value = "remember-me" }) 아이디기억
