
@{
    Layout = "~/Views/Shared/_Layout_Step.cshtml";
}
<style>
    .ui.form .token-input-input-token-facebook input[type=text]
        {
            border: 0px solid rgba(34,36,38,.15);
        }

</style>
<script type="text/javascript">
    $(document).ready(function () {

        //$("#tokeninput-demo").tokenInput("http://jquery-tokeninput-demo.herokuapp.com", {
        //    theme: "facebook"
