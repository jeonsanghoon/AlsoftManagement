
<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <!-- Site Properties -->
    <title>@ViewBag.title</title>
    @{Html.RenderPartial("/Views/Shared/Partial/Header.cshtml"); }
    <style>
        html, body {
            -ms-content-zooming: none;
        }
    </style>
</head>
<body style="background-color:black">

    @{ Response.Buffer = true;}
    @RenderBody()
    @{Html.RenderPartial("/Views/Shared/Partial/Script.cshtml"); }
    @RenderSection("scripts", required: false)
    @{Html.RenderPartial("/Views/Shared/Partial/Analytics.cshtml"); }

    <script type="text/javascript">
        $("document").ready(function () {

            $("body").mouseover(function () {
                try {
                    window.external.notify(JSON.stringify({ method: "UsingWebView" }));
                } catch (e) { }
            });
            $("body").mouseout(function () {
                try {
                    window.external.notify(JSON.stringify({ method: "UsingWebView" }));
                } catch (e) { }

            });
        })
    </script>

    @{Html.RenderPartial("/Views/Shared/Partial/loader.cshtml"); }
</body>

</html>
