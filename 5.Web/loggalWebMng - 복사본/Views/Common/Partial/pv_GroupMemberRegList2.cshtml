@using ALT.VO.Common;
@using ALT.Framework.Data;
@using ALT.BizService;
@{
    List<EMPLOYEE_INFO> list = ViewBag.list;

    <table class="mrc-table list">
        <thead>
            <tr>
                <th column_name="MEMBER_CODE"style="width:50px;">선택</th>
                <th column_name="USER_NAME">직원명</th>
                <th display_size="tablet" column_name="DEPT_NAME">부서명</th>
                <th display_size="tablet"column_name="COMP_TITLE_NAME">직책</th>
                <th display_size="pc" column_name="COMP_POSITION_NAME">직급</th>
                <th display_size="pc" column_name="COMP_POSITION_NAME">메뉴그룹</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (EMPLOYEE_INFO data in list)
                {
                    <tr>
                        <td class="center"><input type="checkbox" name="chkSel" value="@data.MEMBER_CODE"/></td>
                        <td class="center">@data.USER_NAME</td>
                        <td>@data.DEPT_NAME</td>
                        <td>@data.COMP_TITLE_NAME</td>
                        <td>@data.COMP_POSITION_NAME</td>
                        <td>@data.MENU_GROUP_NAME</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
