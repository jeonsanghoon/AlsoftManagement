            if ("@viewMode" == "1") {
                $(".social").hide();
                $(".dvPhone").hide();
            }
            else if ("@viewMode" == "2") { /*SNS Hide*/
                $(".social").hide();
            }
            else if ("@viewMode" == "3") { /*Phone Hide*/
                $(".dvPhone").hide();
            }
