@using ALT.VO.Common;

@{
    List<T_STORE_WEBMENU_EMPLOYEE_MENU> list = ViewBag.list;


    foreach (T_STORE_WEBMENU_EMPLOYEE_MENU data in list)
    {
        string sDisplay = string.IsNullOrEmpty(data.MENU_URL) ? "style='display:none'" : "";
        bool bUse = (data.HIDE == null || data.HIDE == true ? false : true);

        string sSpace = string.Empty;
        for(int i=0; i< data.SEARCH_CODE.Count() /2 -1; i++)
        {
            sSpace += "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;";
        }
            <tr class="@(string.IsNullOrEmpty(data.MENU_URL) ? "trInputHIde" : "")">
                <td class="center"><input type="checkbox" name="chkUse" @(bUse == true ? "checked='checked'" : "") @Html.Raw(sDisplay)/> </td>
                <td class="center hidden">@data.MEMBER_CODE</td>
                <td class="center hidden">@data.MENU_CODE</td>
                <td>@data.SEARCH_CODE</td>

                <td>@Html.Raw(sSpace)@Html.Raw(string.IsNullOrEmpty(sSpace) ? "<b>" + data.MENU_NAME + "</b>" : data.MENU_NAME)</td>
                        
                <td class="center"><input type="checkbox" @((data.INSERT_AUTH == null || data.INSERT_AUTH == true) ? "checked='checked'" : "") @Html.Raw(sDisplay)/></td>
                <td class="center"><input type="checkbox" @((data.UPDATE_AUTH == null || data.UPDATE_AUTH == true) ? "checked='checked'" : "") @Html.Raw(sDisplay)/></td>
                <td class="center"><input type="checkbox" @((data.EXCEL_AUTH == null || data.EXCEL_AUTH == true) ? "checked='checked'" : "") @Html.Raw(sDisplay)/></td>
                <td class="center"><input type="checkbox" @((data.PRINT_AUTH == null || data.PRINT_AUTH == true) ? "checked='checked'" : "") @Html.Raw(sDisplay)/></td>
                <td class="center">@data.UPDATE_NAME</td>
                <td class="center">@data.UPDATE_DATE</td>
                <td class="hide center">@data.PROJECT_SITE</td>
                <td class="hide center">@data.STORE_CODE</td>
            </tr>
        }
    }

