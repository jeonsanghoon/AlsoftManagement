
@{
    List<BOOKMARK_AD_LIST> list = ViewBag.list;
    string totCnt = (list.Count() == 0 ? "0" : list.First().TOTAL_ROWCOUNT.ToString());
    <input type="hidden" id="total" value="@totCnt" />

    foreach (BOOKMARK_AD_LIST data in list)
    {
        string colorCss = (data.STATUS == 0 ? "disabled" : "");

        <tr @(data.STATUS == 0 ? "disabled=disabled" : "")>

            <td class="center @colorCss"><a href="/Advertise/adreg2/@data.AD_CODE">@data.AD_CODE</a></td>
            <td class="@colorCss"><a href="@data.CONTENT_URL">@data.TITLE</a></td>

            <td class="center @colorCss"><img src="@data.LOGO_URL" class="ui mini rounded image"></td>

            <td class="hide @colorCss">@data.BOOKMARK_CODE</td>
            <td class="center @colorCss">@data.USER_ID</td>
            <td class="center @colorCss">@data.USER_NAME</td>
            <td class="center @colorCss">@data.AD_TYPE_NAME</td>
            <td class="center @colorCss">@data.BANNER_TYPE_NAME</td>
            <td class="center @colorCss">@data.AD_CNT</td>
            <td class="center @colorCss">@data.FR_DATE.ToFormatDate()</td>
            <td class="center @colorCss">@data.TO_DATE.ToFormatDate()</td>
            <td class="center @colorCss">@data.FR_TIME</td>
            <td class="center @colorCss">@data.TO_TIME</td>
            <td class="center @colorCss">@data.INSERT_DATE</td>
        </tr>
    }
}

